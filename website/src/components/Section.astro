---
interface Props {
  id?: string
  class?: string
  container?: boolean
}

const {
  id,
  class: className = '',
  container = true
} = Astro.props
---

<section id={id} class={`py-16 sm:py-24 ${className}`}>
  {container ? (
    <div class="max-w-7xl mx-auto px-6">
      <slot />
    </div>
  ) : (
    <slot />
  )}
</section>
